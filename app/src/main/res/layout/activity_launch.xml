<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <xyz.yluo.ruisiapp.widget.CircleImageView
        android:id="@+id/user_image"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:src="@drawable/image_placeholder"
        app:civ_border_color="@color/white"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/launch_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/colorAccent"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/login_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/loading_view"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/img_loading" />

        <TextView
            style="@style/text_14_sec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:text="正在准备数据" />

        <TextView
            style="@style/text_14_sec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="©2016 xidianrs.cn" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_fail_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/btn_login_inner"
            style="@style/btn_pri"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="校园网入口"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btn_login_outer"
            style="@style/btn_pri"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:text="外网入口"
            android:textSize="13sp" />
    </LinearLayout>

</FrameLayout>