<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/bgwhite"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:background="@color/bggrey"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <xyz.yluo.ruisiapp.View.CircleImageView
            app:civ_border_width="2dp"
            app:civ_border_color="#f5f5f5"
            android:id="@+id/article_user_image"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/image_placeholder"/>

        <LinearLayout
            android:layout_marginStart="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/replay_author"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/colorAuthor"
                    android:textSize="14sp"
                    tools:text="author" />
                <TextView
                    android:id="@+id/bt_lable_lz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:background="@drawable/type_bg_blue"
                    android:text="楼主" />

                <TextView
                    android:layout_marginStart="8dp"
                    android:id="@+id/replay_index"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    style="@style/SmallText"
                    tools:text="1楼" />
            </LinearLayout>
            <TextView
                android:id="@+id/replay_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SmallText"
                android:singleLine="true"
                tools:text="1小时前" />

        </LinearLayout>

    </LinearLayout>

    <xyz.yluo.ruisiapp.View.MyHtmlTextView
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        android:textColor="?android:attr/textColorPrimary"
        android:autoLink="web"
        android:id="@+id/html_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="16sp"/>

    <ImageView
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="end|bottom"
        android:id="@+id/btn_reply_2"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:padding="@dimen/dimen_4"
        android:src="@drawable/ic_reply_grey_24dp" />
</LinearLayout>
