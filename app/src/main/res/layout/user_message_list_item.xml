<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:paddingTop="@dimen/dimen_16"
    android:paddingRight="@dimen/dimen_16"
    android:paddingLeft="@dimen/dimen_16"
    android:id="@+id/main_item_btn_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_4"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <xyz.yluo.ruisiapp.View.CircleImageView
            app:civ_border_width="1dp"
            app:civ_border_color="@android:color/white"
            android:id="@+id/article_user_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/image_placeholder"/>

        <LinearLayout
            android:layout_marginStart="@dimen/dimen_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    style="@style/TitleText"
                    android:singleLine="true"
                    tools:text="python发送邮件" />
                <TextView
                    android:id="@+id/time"
                    style="@style/SmallText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2015-01-01"/>

                <TextView
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:textColor="#FFFFFFFF"
                    android:layout_marginStart="@dimen/dimen_8"
                    android:background="@drawable/type_bg_blue"
                    android:id="@+id/is_read"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:singleLine="true"
                    android:layout_marginEnd="@dimen/dimen_8"
                    android:text="未读" />
            </LinearLayout>

            <xyz.yluo.ruisiapp.View.ArrowTextView
                android:id="@+id/reply_content"
                android:padding="6dp"
                android:maxLines="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="1111\n测试呵呵哈哈哈。。。"/>

        </LinearLayout>

    </LinearLayout>

    <View style="@style/DeepLine"
        android:layout_marginTop="8dp"
        android:layout_gravity="bottom" />

</LinearLayout>


