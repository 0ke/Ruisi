<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/edit_bar"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:padding="@dimen/dimen_4"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <CheckBox
            android:layout_margin="@dimen/dimen_8"
            android:button="@null"
            android:id="@+id/action_bold"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/selector_edit_bold_background"
            android:checked="false" />
        <CheckBox
            android:button="@null"
            android:layout_margin="@dimen/dimen_8"
            android:id="@+id/action_italic"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/selector_edit_italic_background" />

        <CheckBox
            android:layout_margin="@dimen/dimen_8"
            android:button="@null"
            android:id="@+id/action_color_text"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/selector_edit_color_background" />

        <CheckBox
            android:clickable="true"
            android:layout_margin="@dimen/dimen_8"
            android:button="@null"
            android:id="@+id/action_list_c"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_edit_list_bulleted_24dp" />

        <CheckBox
            android:clickable="true"
            android:layout_margin="@dimen/dimen_8"
            android:button="@null"
            android:id="@+id/action_list_n"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_edit_list_numbered_24dp" />
        <CheckBox
            android:id="@+id/action_emotion"
            android:clickable="true"
            android:layout_margin="@dimen/dimen_8"
            android:button="@null"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_edit_emoticon_24dp" />

        <CheckBox
            android:clickable="true"
            android:layout_margin="@dimen/dimen_8"
            android:button="@null"
            android:id="@+id/action_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_edit_image_24dp" />

        <CheckBox
            android:clickable="true"
            android:layout_margin="@dimen/dimen_8"
            android:button="@null"
            android:id="@+id/action_link"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_edit_link_24dp" />
    </LinearLayout>



