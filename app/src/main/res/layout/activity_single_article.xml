<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/topic_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/topic_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bggrey"
                android:scrollbars="vertical" />
        </android.support.v4.widget.SwipeRefreshLayout>

        <TextView
            android:id="@+id/view_loading"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:drawablePadding="16dp"
            android:drawableTop="@drawable/ic_autorenew_gray_80dp"
            android:gravity="center"
            android:text="加载中"
            android:textColor="#ffbababa"
            android:textSize="16sp" />
    </FrameLayout>

    <LinearLayout
        android:elevation="6dp"
        android:id="@+id/bottom_bar"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/bgwhite"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="8dp"
            android:gravity="center"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/ic_mode_edit_gray_24dp"
            android:id="@+id/btn_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论"/>

        <TextView
            android:padding="8dp"
            android:gravity="center"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/ic_star_border_gray_24dp"
            android:id="@+id/btn_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收藏"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

        <TextView
            android:padding="8dp"
            android:gravity="center"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/ic_menu_share_gray_24dp"
            android:id="@+id/btn_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:padding="8dp"
            android:gravity="center"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/ic_open_in_browser_24dp"
            android:id="@+id/btn_browser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:padding="8dp"
            android:gravity="center"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/ic_swap_vert_gray_24dp"
            android:id="@+id/btn_reverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="end"
            android:padding="8dp"
            android:gravity="center"
            android:id="@+id/btn_jump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/5页"/>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
