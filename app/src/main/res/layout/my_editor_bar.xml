<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/action_bold"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:tint="@color/colorDisableHintIcon"
        android:src="@drawable/ic_format_bold_white_24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginStart="4dp"
        android:clickable="true" />

    <ImageView
        android:tint="@color/colorDisableHintIcon"
        android:id="@+id/action_italic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:src="@drawable/ic_format_italic_white_24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginStart="4dp"
        android:clickable="true" />

    <ImageView
        android:tint="@color/colorDisableHintIcon"
        android:id="@+id/action_quote"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:src="@drawable/ic_format_quote_white_24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginStart="4dp"
        android:clickable="true" />

    <ImageView
        android:id="@+id/action_color_text"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:tint="@color/colorDisableHintIcon"
        android:src="@drawable/ic_format_color_text_white_24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginStart="4dp"
        android:clickable="true" />

    <ImageView
        android:id="@+id/action_emotion"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:tint="@color/colorDisableHintIcon"
        android:src="@drawable/ic_edit_emoticon_24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginStart="4dp"
        android:clickable="true" />

    <Spinner
        android:layout_marginStart="6dp"
        android:id="@+id/action_text_size"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:entries="@array/font_size"/>
    <View
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="24dp"/>

    <ImageView
        android:id="@+id/action_backspace"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:tint="@color/colorDisableHintIcon"
        android:src="@drawable/ic_backspace_white_24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:layout_marginEnd="8dp"/>
</LinearLayout>



