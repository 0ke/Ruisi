<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_window"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgwhite"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true">

    <View
        android:id="@+id/message_badge"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/badge"
        app:layout_constraintLeft_toLeftOf="@+id/main_window"
        app:layout_constraintTop_toTopOf="@+id/main_window"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/article_title"
        style="@style/TitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingEnd="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="4dp"
        tools:text="话题的标题"
        android:layout_marginStart="14dp"
        app:layout_constraintLeft_toLeftOf="@+id/main_window"
        app:layout_constraintTop_toTopOf="@+id/main_window"
        app:layout_constraintRight_toRightOf="@+id/main_window"/>

    <TextView
        android:id="@+id/time"
        style="@style/SmallText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawablePadding="4dp"
        android:drawableStart="@drawable/ic_time_12dp"
        tools:text="2016/07/01"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/article_title"
        app:layout_constraintRight_toRightOf="@+id/main_window"/>

    <TextView
        android:id="@+id/is_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/type_bg_blue"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="有图"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toLeftOf="@+id/time"
        app:layout_constraintBaseline_toBaselineOf="@+id/time"/>

    <TextView
        android:id="@+id/is_patch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/type_bg_blue"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="附件"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toLeftOf="@+id/is_image"
        app:layout_constraintBaseline_toBaselineOf="@+id/time"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#1f000000"
        android:id="@+id/view"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/time"
        app:layout_constraintLeft_toLeftOf="@+id/main_window"
        app:layout_constraintLeft_toRightOf="@+id/main_window"/>
</android.support.constraint.ConstraintLayout>