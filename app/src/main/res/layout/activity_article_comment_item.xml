<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@android:color/white"
    android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/article_user_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/image_placeholder"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_8"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/replay_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAuthor"
                        android:textSize="14sp"
                        android:text="TakWolf" />
                    <TextView
                        android:layout_marginLeft="@dimen/dimen_4"
                        android:id="@+id/replay_user_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:textColor="@android:color/white"
                        android:background="@color/colorAccent"
                        android:textSize="12sp"
                        android:text="西电大一" />
                    <TextView
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/dimen_4"
                        android:id="@+id/replay_user_gold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:textColor="#F26C4F"
                        android:background="#f9f2f4"
                        android:textSize="12sp"
                        android:text="金币+30" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/replay_index"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:singleLine="true"
                        android:text="1楼" />

                    <TextView
                        android:layout_marginLeft="@dimen/dimen_4"
                        android:id="@+id/replay_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="12sp"
                        android:singleLine="true"
                        android:text="1小时前" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/topic_item_reply_layout_icon"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="end"
                android:orientation="horizontal">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/replay_btn_01"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:padding="6dp"
                    android:drawableStart="@drawable/ic_menu_gallery"
                    android:drawablePadding="8dp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:text="12" />

                <TextView
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:drawableRight="@drawable/ic_reply_accent_24dp"
                    android:id="@+id/replay_btn_02"
                    android:text="回复"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:padding="8dp"
                    android:scaleType="center" />

            </LinearLayout>

        </LinearLayout>
        <xyz.yluo.ruisiapp.utils.MyWebView
            android:layout_marginLeft="44dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:id="@+id/replay_webView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </xyz.yluo.ruisiapp.utils.MyWebView>

        <TextView
            android:visibility="gone"
            android:id="@+id/replay_user_pinfen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="#F26C4F"
            android:background="#f9f2f4"
            android:textSize="12sp"
            android:text="评分:"
            android:layout_marginBottom="8dp"/>
    <View style="@style/DeepLine"
        android:layout_marginLeft="40dp"
        android:layout_gravity="bottom" />
</LinearLayout>
