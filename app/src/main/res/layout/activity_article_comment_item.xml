<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="0dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="1dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingLeft="@dimen/dimen_16"
        android:paddingRight="@dimen/dimen_16"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/replay_image"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/image_placeholder" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_8"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/replay_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="14sp"
                        android:text="TakWolf" />
                    <TextView
                        android:layout_marginLeft="@dimen/dimen_4"
                        android:id="@+id/replay_user_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:textColor="@android:color/white"
                        android:background="@color/colorAccent"
                        android:textSize="12sp"
                        android:text="西电大一" />
                    <TextView
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/dimen_4"
                        android:id="@+id/replay_user_gold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:textColor="#F26C4F"
                        android:background="#FFF4DD"
                        android:textSize="12sp"
                        android:text="金币+30" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/replay_index"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:singleLine="true"
                        android:text="1楼" />

                    <TextView
                        android:layout_marginLeft="@dimen/dimen_4"
                        android:id="@+id/replay_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="12sp"
                        android:singleLine="true"
                        android:text="1小时前" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/topic_item_reply_layout_icon"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:visibility="gone"
                    android:id="@+id/replay_btn_01"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:padding="8dp"
                    android:drawableStart="@drawable/ic_menu_gallery"
                    android:drawablePadding="8dp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="14sp"
                    android:gravity="center"
                    tools:text="12" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/replay_btn_02"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_menu_send"
                    android:scaleType="center" />

            </LinearLayout>

        </LinearLayout>
        <xyz.yluo.ruisiapp.article.MyWebView
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:id="@+id/replay_webView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </xyz.yluo.ruisiapp.article.MyWebView>

        <TextView
            android:visibility="gone"
            android:id="@+id/replay_user_pinfen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="#F26C4F"
            android:background="#FFF4DD"
            android:textSize="12sp"
            android:text="评分:"
            android:layout_marginBottom="12dp"/>
    </LinearLayout>
    <View style="@style/DeepLine"
        android:layout_gravity="bottom" />
</android.support.v7.widget.CardView>
