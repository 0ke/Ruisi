<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout android:id="@+id/main_window"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include layout="@layout/search_view"/>

    <FrameLayout
        android:layout_marginTop="52dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView android:id="@+id/view_loading"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:drawableTop="@drawable/ic_search_gray_80dp"
            android:drawablePadding="16dp"
            android:text="点击索搜"
            android:textColor="#ffbababa"
            android:textSize="16sp"
            android:gravity="center"
            xmlns:android="http://schemas.android.com/apk/res/android" />

        <android.support.v4.widget.SwipeRefreshLayout

            android:id="@+id/refresh_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>

        </android.support.v4.widget.SwipeRefreshLayout>
    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>