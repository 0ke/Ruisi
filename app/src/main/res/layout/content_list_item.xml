<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/bgwhite"
    android:layout_marginBottom="12dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:textStyle="bold"
        android:padding="16dp"
        android:id="@+id/article_title"
        android:textColor="@color/textColorPrimary"
        android:textSize="16sp"
        tools:text="尴尬，Xbox One 2与PS4.5太快推出压力重重"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <xyz.yluo.ruisiapp.View.CircleImageView
            android:id="@+id/article_user_image"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/image_placeholder"/>

        <LinearLayout
            android:layout_marginStart="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/article_username"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/colorAuthor"
                    android:textSize="14sp"
                    tools:text="author" />
                <TextView
                    android:id="@+id/bt_lable_lz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:background="@drawable/type_bg_blue"
                    android:text="楼主" />

                <ImageView
                    android:layout_marginStart="8dp"
                    android:id="@+id/btn_share"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground"
                    android:src="@drawable/ic_menu_share_accent_24dp"
                    android:padding="@dimen/dimen_4"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />
                <ImageView
                    android:id="@+id/btn_star"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground"
                    android:layout_marginStart="8dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:padding="@dimen/dimen_4"
                    android:src="@drawable/ic_favorite_border_black_24dp" />
            </LinearLayout>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/article_post_time"
                style="@style/SmallText"
                android:singleLine="true"
                tools:text="发布于：2天前" />

        </LinearLayout>

    </LinearLayout>

    <xyz.yluo.ruisiapp.View.MyWebView
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/content_webView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </xyz.yluo.ruisiapp.View.MyWebView>
</LinearLayout>

