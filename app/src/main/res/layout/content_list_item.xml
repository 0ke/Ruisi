<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgwhite"
    android:id="@+id/main_window">

    <View
        android:layout_width="6dp"
        android:layout_height="24dp"
        android:background="@color/colorAccent"
        android:id="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/main_window"
        app:layout_constraintLeft_toLeftOf="@+id/main_window"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/article_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorPrimary"
        android:textSize="17sp"
        android:textStyle="bold"
        android:padding="12dp"
        tools:text="尴尬，Xbox One 2与PS4.5太快推出压力重重,尴尬，Xbox One 2"
        app:layout_constraintLeft_toLeftOf="@+id/main_window"
        app:layout_constraintTop_toTopOf="@+id/main_window"
        app:layout_constraintRight_toRightOf="@+id/main_window" />

    <xyz.yluo.ruisiapp.View.CircleImageView
        android:id="@+id/article_user_image"
        android:layout_marginStart="12dp"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/image_placeholder"
        app:layout_constraintLeft_toLeftOf="@+id/main_window"
        app:layout_constraintTop_toBottomOf="@+id/article_title" />



    <TextView
        android:id="@+id/article_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAuthor"
        android:textSize="14sp"
        tools:text="author"
        app:layout_constraintLeft_toRightOf="@+id/article_user_image"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/article_user_image"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/bt_lable_lz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/type_bg_blue"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="楼主"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        tools:layout_editor_absoluteY="70dp"
        app:layout_constraintLeft_toRightOf="@+id/article_username"
        app:layout_constraintBaseline_toBaselineOf="@+id/article_username"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/article_post_time"
        style="@style/SmallText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        tools:text="发布于：2天前"
        app:layout_constraintLeft_toRightOf="@+id/article_user_image"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/article_username"
        android:layout_marginTop="8dp" />

    <View
        android:id="@+id/gap"
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#1f000000"
        app:layout_constraintLeft_toLeftOf="@+id/main_window"
        app:layout_constraintRight_toRightOf="@+id/main_window"
        app:layout_constraintTop_toBottomOf="@id/article_user_image"/>


    <xyz.yluo.ruisiapp.View.MyHtmlView.MyHtmlTextView
        android:id="@+id/html_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:lineSpacingMultiplier="1.4"
        android:paddingTop="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="16sp"
        tools:text="在点(110,10)处绘制一个宽和高均为50像素的正方形边框 context.strokeRect(110,10,50,50); //在点(30,10)处绘制一个宽和高均为50像素的正方形边框 "
        app:layout_constraintLeft_toLeftOf="@+id/main_window"
        app:layout_constraintTop_toBottomOf="@+id/gap"
        app:layout_constraintRight_toRightOf="@+id/main_window" />

    <!--卡顿问题还没有解决-->
    <!--<xyz.yluo.ruisiapp.View.MyWebView-->
    <!--android:layout_marginTop="8dp"-->
    <!--android:layout_marginStart="12dp"-->
    <!--android:layout_marginEnd="12dp"-->
    <!--android:layout_marginBottom="8dp"-->
    <!--android:scrollbars="none"-->
    <!--android:id="@+id/mywebview"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"/>-->

    <View
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/bggrey"
        app:layout_constraintTop_toBottomOf="@id/html_text"/>

</android.support.constraint.ConstraintLayout>

