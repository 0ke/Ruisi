<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8"
            android:text="Login"
            android:id="@+id/login_button"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8"
            android:text="Get FormHash"
            android:id="@+id/get_formhash"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POST"
            android:id="@+id/login_post"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="get list"
            android:id="@+id/btn_get_list"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="show_cookie"
            android:id="@+id/show_cookie"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="show_hash"
            android:id="@+id/show_hash"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="get_single"
            android:id="@+id/get_single" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Getimage"
            android:id="@+id/get_image" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="log"
            android:id="@+id/new_login"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="chec"
            android:id="@+id/new_get"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="has"
            android:id="@+id/new_get_hash" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hash"
            android:id="@+id/new_get_hash_again" />


    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="md5"
        android:id="@+id/pass_md5" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get hot"
        android:id="@+id/get_hot" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get板块"
        android:id="@+id/get_forums" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <WebView
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </WebView>
            <TextView
                android:id="@+id/text_response"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="结果"/>

        </LinearLayout>


    </ScrollView>

</LinearLayout>