<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ffflay">

    <LinearLayout
        android:clickable="true"
        android:id="@+id/main_item_btn_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingStart="@dimen/dimen_16"
        android:paddingEnd="@dimen/dimen_16"
        android:paddingBottom="@dimen/dimen_8"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <TextView
            android:id="@+id/article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="17sp"
            tools:text="话题的标题" />
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:gravity="top"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_person_12dp"
                android:id="@+id/author_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:textColor="@color/colorAuthor"
                android:textSize="12sp"
                android:singleLine="true"
                android:text="some"/>

            <TextView
                android:gravity="top"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_reply_12dp"
                android:id="@+id/reply_count"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="12sp"
                android:singleLine="true"
                android:text="222"/>
        </LinearLayout>



    </LinearLayout>

    <ImageView
        android:id="@+id/is_image"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_tu"/>

    <View style="@style/DeepLine"
        android:layout_marginRight="@dimen/dimen_16"
        android:layout_marginLeft="@dimen/dimen_16"
        android:layout_gravity="bottom" />

</FrameLayout>